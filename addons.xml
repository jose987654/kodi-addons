<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
    <addon id="plugin.video.seedr" name="Seedr" version="1.1.0" provider-name="Seedr">
        <requires>
            <import addon="xbmc.python" version="3.0.0" />
            <import addon="script.module.requests" version="2.22.0" />
            <import addon="inputstream.adaptive" version="2.0.0" />
        </requires>
        <extension point="xbmc.python.pluginsource" library="main.py">
            <provides>video audio </provides>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary lang="en_GB">Seedr - Stream your cloud media</summary>
            <description lang="en_GB">Stream videos, music, and images from your Seedr cloud storage directly to Kodi.
    
    Features:
    - Stream media files directly without downloading
    - Automatic playlist support for audio files
    - Easy navigation through your Seedr folders
    - Access your cloud content from anywhere
    
    Requires a Seedr.cc account. Visit www.seedr.cc to sign up.</description>
            <platform>all</platform>
            <license>GPL-3.0</license>
            <website>https://www.seedr.cc/</website>
            <assets>
                <icon>icon.png</icon>
                <fanart>fanart.jpg</fanart>
            </assets>
        </extension>
    </addon>
    <addon id="repository.seedr" name="Seedr Repository" version="1.0.1" provider-name="Seedr">
        <extension point="xbmc.addon.repository" name="Seedr Repository">
            <dir>
                <info compressed="false">https://raw.githubusercontent.com/jose987654/kodi-addons/master/addons.xml</info>
                <checksum>https://raw.githubusercontent.com/jose987654/kodi-addons/master/addons.xml.md5</checksum>
                <datadir zip="true">https://raw.githubusercontent.com/jose987654/kodi-addons/master/</datadir>
            </dir>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary lang="en_GB">Seedr Repository
    Download Torrents to the seedr cloud
    -- Instant access across all devices through Kodi, your phone, your PC
    :-) www.seedr.cc Account required</summary>            <disclaimer>This plugin and all it's content, unless otherwise specified, is property of Seedr.cc</disclaimer>
            <description>Repository for Seedr Kodi Addon</description>
